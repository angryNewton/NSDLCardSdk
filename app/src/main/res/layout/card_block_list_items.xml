<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_availablePlanItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="start">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/rBtn_check"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/margin_top_5"
                android:background="@drawable/ic_unchecked_box"
                android:button="@null"
                android:clickable="false"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:gravity="center|start">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_card_block_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginEnd="@dimen/margin_top_5"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="start"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/bluey_grey_two"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
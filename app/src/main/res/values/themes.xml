    <style name="MySmallTextViewTheme">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:padding">@dimen/margin_top_3</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/margin_top_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3ab273</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="MyLargeTextViewTheme">
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:lineSpacingExtra">@dimen/margin_top_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="lastTextViewTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:lineSpacingExtra">@dimen/margin_top_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppThemeTextInput" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
        <item name="bottomSheetDialogTheme">@style/MyBottomSheetTheme</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleEbilling</item>
    </style>

    <style name="AppModalStyleEbilling" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_transparent_bg</item>
    </style>

    <!--<style name="MySmallTextViewTheme">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:padding">@dimen/margin_top_3</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/margin_top_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>

    </style>-->

    <style name="MyMediumTextViewTheme">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:padding">@dimen/margin_top_6</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/margin_top_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="CardModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_card_dialog</item>
    </style>

    <style name="MySnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/snackbar_overlay</item>
        <!-- If you want to avoid the alpha level for the color that is overlaid on top of the background color-->
        <item name="backgroundOverlayColorAlpha">1.0</item>
    </style>

    <style name="snackbar_overlay">
        <item name="colorOnSurface">@color/dark_four</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>